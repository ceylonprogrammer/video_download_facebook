<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activitys.SplashActivity">

    <ImageView
        android:layout_marginBottom="@dimen/dimen_1x"
        android:src="@drawable/ic_logo"
        android:layout_width="@dimen/dimen_6x"
        android:layout_height="@dimen/dimen_6x"
        app:layout_constraintBottom_toTopOf="@id/txt_title_slash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_title_slash"
        android:textSize="@dimen/text_size_normal"
        android:fontFamily="@font/lobster"
        android:textColor="@color/colorWhite"
        android:text="@string/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>