<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"

    android:paddingTop="@dimen/dimen_x1x"
    tools:ignore="RtlSymmetry">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/round_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_song_info_text_1"
        app:corner_radius="@dimen/dimen_1x">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:background="@drawable/custom_video"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_play"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dimen_1x"
                android:src="@drawable/ic_playgg"
                android:layout_marginStart="@dimen/dimen_1x"
                android:layout_marginBottom="@dimen/dimen_x1x"
                android:layout_width="@dimen/dimen_1x"
                android:layout_height="@dimen/dimen_1x" />

            <TextView

                android:id="@+id/txt_time"
                android:layout_toEndOf="@id/img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_1x"
                android:layout_marginBottom="@dimen/dimen_1x"
                android:text="5:00"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/img_detail"
                android:focusable="true"
                android:clickable="true"
                android:visibility="visible"
                android:padding="20dp"
                android:layout_width="@dimen/dimen_4x"
                android:layout_height="@dimen/dimen_4x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:background="@color/colorCrystal"
                android:src="@drawable/ic_content" />
        </RelativeLayout>


    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


</RelativeLayout>


