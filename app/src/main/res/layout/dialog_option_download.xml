<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    style="@style/ThemeDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#fff"
    app:corner_radius="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btn_download_video"
            style="@style/StypeButtonDialog"
            android:background="@drawable/rip_buttom_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_6x">

            <ImageView
                android:id="@+id/img_dialog_HD"
                android:layout_marginEnd="@dimen/dimen_2x"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_dialog_HD"
                android:fontFamily="@font/lobster"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:text="Download video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<!--            <com.github.ybq.android.spinkit.SpinKitView-->
<!--                android:id="@+id/spinKit_HD"-->
<!--                style="@style/SpinKitView.Small.FadingCircle"-->
<!--                android:layout_width="@dimen/dimen_2x"-->
<!--                android:layout_height="@dimen/dimen_2x"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginEnd="@dimen/dimen_2x"-->
<!--                app:SpinKit_Color="@color/colorWhite" />-->
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btn_watch_video"
            style="@style/StypeButtonDialog"
            android:background="@drawable/rip_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_6x">

            <ImageView
                android:id="@+id/img_dialog_Watch"
                android:layout_marginEnd="@dimen/dimen_2x"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_dialog_Watch"
                android:fontFamily="@font/lobster"
                android:textColor="#575757"
                android:layout_centerInParent="true"
                android:text="Download video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<!--            <com.github.ybq.android.spinkit.SpinKitView-->
<!--                android:id="@+id/spinKit_Watch"-->
<!--                style="@style/SpinKitView.Small.FadingCircle"-->
<!--                android:layout_width="@dimen/dimen_2x"-->
<!--                android:layout_height="@dimen/dimen_2x"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginEnd="@dimen/dimen_2x"-->
<!--                app:SpinKit_Color="@color/colorWhite" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_close"
            android:layout_marginBottom="@dimen/dimen_2x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/txt_dialog_close"
                android:background="@drawable/rip_close"
                android:paddingBottom="@dimen/dimen_1x"
                android:fontFamily="@font/lobster"
                android:paddingTop="@dimen/dimen_1x"
                android:paddingStart="@dimen/dimen_2x"
                android:paddingEnd="@dimen/dimen_2x"
                android:textColor="#575757"
                android:layout_centerInParent="true"
                android:text="Close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>
